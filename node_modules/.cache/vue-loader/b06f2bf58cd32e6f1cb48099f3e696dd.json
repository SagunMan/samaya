    <div class=\"notepadEditor\">\n        <div class=\"metadata\">\n          <i class=\"fal fa-clock\"></i>\n          <span>{{noteWrittenAt}}</span>\n        </div>\n        <vue-editor v-model=\"selectedNote.text\" :editorToolbar=\"customToolbar\"></vue-editor>\n      </div>\n      <!-- </vue-custom-scrollbar> -->\n    </div>\n  </div>\n</template>\n\n<script>\nimport { mapGetters } from \"vuex\";\nimport { v1 as uuid } from \"uuid\";\nimport { VueEditor } from \"vue2-editor\";\nimport moment from \"moment\";\n// import vueCustomScrollbar from \"vue-custom-scrollbar\";\n\nexport default {\n  name: \"NotePad\",\n  components: { VueEditor },\n  props: {},\n  data() {\n    return {\n      showNotes: true,\n      notes: [\n        {\n          id: \"123123-123123-123213-123\",\n          title: \"Test\",\n          text: \"This is a test note\",\n          createdAt: 1598095559688,\n          upadatedAt: 1598095559688\n        }\n      ],\n      selectedNote: null,\n      customToolbar: [\n        [\"bold\", \"italic\", \"underline\"],\n        [{ list: \"ordered\" }, { list: \"bullet\" }]\n      ]\n    };\n  },\n\n  created() {\n    this.addNote();\n    this.selectedNote = this.notes[0];\n  },\n\n  methods: {\n    toggleNotes() {\n      this.showNotes = !this.showNotes;\n    },\n\n    selectNote(note) {\n      this.selectedNote = note;\n    },\n\n    addNote() {\n      let now = Date.now();\n      this.notes.push({\n        id: uuid(),\n        title: \"New note\",\n        text: null,\n        createdAt: now,\n        upadatedAt: now\n      });\n    }\n  },\n\n  computed: {\n    ...mapGetters(\"settings\", [\"clockFormat\"]),\n\n    noteWrittenAt() {\n      return moment(this.selectedNote.createdAt, \"x\").fromNow();\n    }\n  }\n};\n</script>\n\n<!-- Add \"scoped\" attribute to limit CSS to this component only -->\n<style lang=\"scss\" scoped>\n.toggle {\n  font-size: 1.2rem;\n  color: white;\n  cursor: pointer;\n  min-width: 30px;\n  min-height: 30px;\n  border-radius: 3px;\n  transition: background-color 0.3s ease-in-out;\n  -webkit-user-select: none; /* Safari */\n  -ms-user-select: none; /* IE 10+ and Edge */\n  user-select: none; /* Standard syntax */\n\n  &:hover {\n    background-color: rgba($color: white, $alpha: 0.1);\n  }\n\n  &.--active {\n    background-color: rgba($color: white, $alpha: 0.1);\n  }\n}\n\n.notepadContainer {\n  $background: rgba(white, 0.8);\n\n  display: flex;\n  position: absolute;\n  left: calc(100% + 10px);\n  top: 0;\n  height: 300px;\n  width: 600px;\n  padding: 0.25rem;\n  background-color: $background;\n  color: #373737;\n  border-radius: 5px;\n\n  &:after {\n    content: \"\";\n    position: absolute;\n    left: 0;\n    top: 10px;\n    width: 0;\n    height: 0;\n    border: 10px solid transparent;\n    border-right-color: $background;\n    border-left: 0;\n    border-bottom: 0;\n    margin-top: -5px;\n    margin-left: -10px;\n  }\n\n  .notepadNav {\n    display: flex;\n    flex-direction: column;\n    border-top-left-radius: 5px;\n    border-bottom-left-radius: 5px;\n\n    .navHeader {\n    }\n\n    .notepadNavItem {\n      width: 100px;\n      padding: 0.25rem 0.5rem;\n      text-align: left;\n      font-size: 0.8rem;\n      cursor: pointer;\n      transition: background-color 0.25s ease-in-out;\n\n      &.--active {\n        background-color: rgba(white, 0.5);\n        border-right: 2px solid rgba(white, 0.8);\n      }\n    }\n  }\n\n  .notepadEditor {\n    position: relative;\n    flex: 1;\n    background-color: rgba(white, 0.5);\n    height: 300px;\n\n    // Customize Quill Editor\n    ::v-deep .ql-toolbar {\n      border: none;\n      padding: 0;\n      padding-right: 0;\n      text-align: right;\n\n      .ql-formats {\n        margin-right: 0;\n        margin-bottom: 5px;\n      }\n\n      button {\n        svg {\n          width: 1rem;\n          height: 1rem;\n        }\n      }\n    }\n    ::v-deep #quill-container {\n      border: none;\n\n      .ql-editor {\n        padding: 0.25rem;\n        font-size: 0.8rem;\n        overflow: auto;\n        height: calc(300px - 30px);\n      }\n    }\n\n    .metadata {\n      display: flex;\n      position: absolute;\n      top: 3px;\n      left: 0;\n      font-size: 0.8rem;\n      padding-left: 0.25rem;\n\n      i {\n        align-self: center;\n        margin-right: 5px;\n      }\n\n      span {\n        align-self: center;\n      }\n    }\n  }\n}\n</style>\n"]}]}