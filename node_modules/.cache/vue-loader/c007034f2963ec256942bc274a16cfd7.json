 handleEdit(){\n      this.$store.commit('greetings/setName', null);\n      this.$router.push('/');\n    }\n  },\n\n  computed: {\n    ...mapGetters(\"greetings\", [\"name\"]),\n    greeting() {\n      var prefix = \"शुभ\";\n      var translations = {\n        morning: \"प्रभात\",\n        noon: \"मध्यान्ह\",\n        evening: \"सन्ध्या\",\n        night: \"रात्री\"\n      };\n      let trans;\n      let hourNow = new Date().getHours();\n      if (hourNow >= 1 && hourNow <= 12) trans = translations.morning;\n      else if (hourNow > 12 && hourNow <= 16) trans = translations.noon;\n      else if (hourNow > 16 && hourNow <= 19) trans = translations.evening;\n      else if (hourNow > 19 && hourNow <= 24) trans = translations.night;\n      // debugger;\n      return prefix + \" \" + trans + (this.name ? (\", \" + this.name) : '');\n    }\n  }\n};\n</script>\n\n<!-- Add \"scoped\" attribute to limit CSS to this component only -->\n<style lang=\"scss\" scoped>\n.greeting {\n  display: flex;\n  margin-top: -3rem;\n  font-size: 3rem;\n  color: white;\n  // text-align: center;\n  justify-content: center;\n\n  span {\n    align-self: center;\n  }\n\n  .btnEdit {\n    align-self: center;\n    margin-left: 10px;\n    color: rgba($color: white, $alpha: 0.9);\n    font-size: 1rem;\n    cursor: pointer;\n    opacity: 0;\n    visibility: hidden;\n    @include transition;\n  }\n\n  &:hover .btnEdit{\n    opacity: 1;\n    visibility: visible;\n  }\n}\n</style>\n"]}]}